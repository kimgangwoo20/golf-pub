rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // ========================================
    // 헬퍼 함수
    // ========================================
    
    // 로그인 확인
    function isSignedIn() {
      return request.auth != null;
    }
    
    // 파일 크기 체크 (최대 10MB)
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // 이미지 파일 확인
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // ========================================
    // 1. 프로필 사진 (profiles/)
    // ========================================
    match /profiles/{userId}/{fileName} {
      // 읽기: 로그인한 모든 사용자
      allow read: if isSignedIn();
      
      // 업로드: 본인만, 이미지만, 10MB 이하
      allow create: if isSignedIn() && 
                       request.auth.uid == userId &&
                       isImage() &&
                       isValidSize();
      
      // 수정: 본인만
      allow update: if isSignedIn() && 
                       request.auth.uid == userId &&
                       isImage() &&
                       isValidSize();
      
      // 삭제: 본인만
      allow delete: if isSignedIn() && 
                       request.auth.uid == userId;
    }
    
    // ========================================
    // 2. 게시글 이미지 (posts/)
    // 코드 경로: posts/{postId}/{fileName}
    // ========================================
    match /posts/{postId}/{fileName} {
      // 읽기: 로그인한 모든 사용자
      allow read: if isSignedIn();

      // 업로드: 로그인한 사용자, 이미지만, 10MB 이하
      allow create: if isSignedIn() &&
                       isImage() &&
                       isValidSize();

      // 수정: 로그인한 사용자
      allow update: if isSignedIn() &&
                       isImage() &&
                       isValidSize();

      // 삭제: 로그인한 사용자
      allow delete: if isSignedIn();
    }

    // ========================================
    // 3. 부킹 이미지 (bookings/)
    // 코드 경로: bookings/{bookingId}/{fileName}
    // ========================================
    match /bookings/{bookingId}/{fileName} {
      // 읽기: 로그인한 모든 사용자
      allow read: if isSignedIn();

      // 업로드: 로그인한 사용자, 이미지만, 10MB 이하
      allow create: if isSignedIn() &&
                       isImage() &&
                       isValidSize();

      // 수정: 로그인한 사용자
      allow update: if isSignedIn() &&
                       isImage() &&
                       isValidSize();

      // 삭제: 로그인한 사용자
      allow delete: if isSignedIn();
    }

    // ========================================
    // 4. 중고거래 상품 이미지 (products/)
    // 코드 경로: products/{productId}/{fileName}
    // ========================================
    match /products/{productId}/{fileName} {
      // 읽기: 로그인한 모든 사용자
      allow read: if isSignedIn();

      // 업로드: 로그인한 사용자, 이미지만, 10MB 이하
      allow create: if isSignedIn() &&
                       isImage() &&
                       isValidSize();

      // 수정: 로그인한 사용자
      allow update: if isSignedIn() &&
                       isImage() &&
                       isValidSize();

      // 삭제: 로그인한 사용자
      allow delete: if isSignedIn();
    }

    // ========================================
    // 5. 채팅 이미지 (chats/)
    // 코드 경로: chats/{roomId}/{fileName}
    // ========================================
    match /chats/{roomId}/{fileName} {
      // 읽기: 로그인한 모든 사용자
      allow read: if isSignedIn();

      // 업로드: 로그인한 사용자, 이미지만, 10MB 이하
      allow create: if isSignedIn() &&
                       isImage() &&
                       isValidSize();

      // 수정: 로그인한 사용자
      allow update: if isSignedIn() &&
                       isImage() &&
                       isValidSize();

      // 삭제: 로그인한 사용자
      allow delete: if isSignedIn();
    }
    
    // ========================================
    // 6. 리뷰 사진 (reviews/)
    // 코드 경로: reviews/{reviewId}/{fileName}
    // ========================================
    match /reviews/{reviewId}/{fileName} {
      // 읽기: 로그인한 모든 사용자
      allow read: if isSignedIn();

      // 업로드: 로그인한 사용자, 이미지만, 10MB 이하
      allow create: if isSignedIn() &&
                       isImage() &&
                       isValidSize();

      // 수정: 로그인한 사용자
      allow update: if isSignedIn() &&
                       isImage() &&
                       isValidSize();

      // 삭제: 로그인한 사용자
      allow delete: if isSignedIn();
    }
    
    // ========================================
    // 7. 인증 서류 (verifications/)
    // ========================================
    match /verifications/{userId}/{fileName} {
      // 읽기: 관리자만
      allow read: if false; // 서버에서만 접근
      
      // 업로드: 본인만, 10MB 이하
      allow create: if isSignedIn() && 
                       request.auth.uid == userId &&
                       isValidSize();
      
      // 수정/삭제: 불가 (보안)
      allow update: if false;
      allow delete: if false;
    }
    
    // ========================================
    // 8. 임시 파일 (temp/)
    // ========================================
    match /temp/{userId}/{fileName} {
      // 읽기: 본인만
      allow read: if isSignedIn() && 
                     request.auth.uid == userId;
      
      // 업로드: 본인만, 10MB 이하
      allow create: if isSignedIn() && 
                       request.auth.uid == userId &&
                       isValidSize();
      
      // 수정: 본인만
      allow update: if isSignedIn() && 
                       request.auth.uid == userId &&
                       isValidSize();
      
      // 삭제: 본인만
      allow delete: if isSignedIn() && 
                       request.auth.uid == userId;
    }
    
    // ========================================
    // 기타: 모든 다른 경로 차단
    // ========================================
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
