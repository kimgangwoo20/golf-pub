# ========================================
# 골프 Pub 앱 - 환경 변수 템플릿
# ========================================
#
# 사용 방법:
# 1. 이 파일을 복사하여 .env 파일 생성
#    cp .env.example .env
#
# 2. 각 항목에 실제 값 입력
#
# 3. .env 파일은 절대 Git에 업로드하지 마세요!
# ========================================

# ========================================
# 1. Firebase 설정 (필수)
# ========================================
# Firebase Console에서 복사
# https://console.firebase.google.com/

EXPO_PUBLIC_FIREBASE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789012:android:XXXXXXXXXXXXXXXX
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# ========================================
# 2. 토스페이먼츠 (결제)
# ========================================
# 토스페이먼츠 개발자센터에서 발급
# https://developers.tosspayments.com/
# 클라이언트 키만 필요 (시크릿 키는 Cloud Functions에서 Secret Manager 사용)

EXPO_PUBLIC_TOSS_CLIENT_KEY=test_ck_XXXXXXXXXXXXXXXXXXXXXXXX

# ========================================
# 3. Kakao (소셜 로그인)
# ========================================
# Kakao Developers에서 발급
# https://developers.kakao.com/

EXPO_PUBLIC_KAKAO_APP_KEY=your_kakao_app_key_32_characters

# ========================================
# 4. 앱 설정
# ========================================

# 앱 환경 (development | production)
EXPO_PUBLIC_APP_ENV=development

# ========================================
# 5. 디버그 설정
# ========================================

# 로그 레벨 (debug | info | warn | error)
EXPO_PUBLIC_LOG_LEVEL=debug

# Firebase 에뮬레이터 사용 여부
EXPO_PUBLIC_USE_EMULATOR=false
EXPO_PUBLIC_FIRESTORE_EMULATOR_HOST=localhost:8080
EXPO_PUBLIC_AUTH_EMULATOR_HOST=localhost:9099
EXPO_PUBLIC_STORAGE_EMULATOR_HOST=localhost:9199

# ========================================
# 6. 향후 연동 (현재 미사용)
# ========================================

# Sentry 에러 추적 (향후 연동 시 활성화)
# EXPO_PUBLIC_SENTRY_DSN=

# Google Analytics (향후 연동 시 활성화)
# EXPO_PUBLIC_GA_MEASUREMENT_ID=

# ========================================
# 주의사항
# ========================================
#
# 1. 이 파일은 템플릿입니다
# 2. 실제 값은 .env 파일에 입력하세요
# 3. .env 파일은 절대 Git에 업로드하지 마세요!
# 4. 프로덕션 키와 개발 키를 분리하세요
# 5. TOSS_SECRET_KEY는 Cloud Functions Secret Manager에서 관리
#
# ========================================
